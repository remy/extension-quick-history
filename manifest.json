{
  "manifest_version": 2,
  "name": "History Search",
  "version": "1.0",
  "permissions": ["history", "tabs"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "theme_icons": [
      {
        "light": "icons/icon-dark-16.png",
        "dark": "icons/icon-16.png",
        "size": 16
      },
      {
        "light": "icons/icon-dark-32.png",
        "dark": "icons/icon-32.png",
        "size": 32
      },
      {
        "light": "icons/icon-dark-48.png",
        "dark": "icons/icon-48.png",
        "size": 48
      },
      {
        "light": "icons/icon-dark-128.png",
        "dark": "icons/icon-128.png",
        "size": 128
      }
    ]
  },

  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["lib/fuse.min.js", "background.js"]
  }
}
